<idea-plugin>
    <id>com.zerodyn.code-genie</id>
    <name>Code-Genie</name>
    <version>1.0.0</version>
    <vendor email="jwenfu0626@gmail.com">JWen-Fu</vendor>

    <description>
        Code-Genie 是一款基于 DDL 自动生成代码的 IntelliJ IDEA 插件，支持 MVC 和 DDD 架构模式。
    </description>

    <depends>com.intellij.modules.platform</depends>

    <actions>
        <action id="GenerateCodeAction"
                class="com.zerodyn.plugin.GenerateCodeAction"
                text="Generate-Code"
                description="根据输入的 DDL 语句生成 Entity、Controller、Service 等代码">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
        </action>
    </actions>
</idea-plugin>
